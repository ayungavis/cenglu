{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "examples"]
}
